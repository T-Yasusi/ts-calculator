{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "calc",             // ソースのルート
    "outDir": "modules",           // 出力ディレクトリ
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["calc/**/*.ts"]
}
